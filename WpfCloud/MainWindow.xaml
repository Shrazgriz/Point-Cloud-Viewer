<Window x:Name="MainForm" x:Class="WpfCloud.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCloud"
        xmlns:wfi ="clr-namespace:System.Windows.Forms.Integration;assembly=WindowsFormsIntegration"
        xmlns:wf ="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
        mc:Ignorable="d"
        Title="点云数据智能处理" Height="720" Width="1280" FontSize="16" FontWeight="Bold">
    <Grid x:Name="MajorGrid">
        <Grid.RowDefinitions>
            <RowDefinition MaxHeight="50"/>
            <RowDefinition MaxHeight="50"/>
            <RowDefinition/>
            <RowDefinition MaxHeight="100"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="100" />
            <ColumnDefinition MinWidth="80"/>
        </Grid.ColumnDefinitions>
        <wfi:WindowsFormsHost x:Name="wfhost" Loaded="WindowsFormsHost_Loaded" SizeChanged="Wfhost_SizeChanged" Margin="0" Grid.Row="2" Grid.ColumnSpan="2">
            <wf:Panel x:Name="canvas" AutoSize="True" Dock="Fill" Resize="Canvas_Resize"></wf:Panel>
        </wfi:WindowsFormsHost>
        <Menu x:Name="MainMenu" Margin="0" VerticalAlignment="Top" Panel.ZIndex="1">
            <Button x:Name="menuReadCloud" Content="读取点云" Click="MenuReadCloud_Click"/>
            <Button x:Name="menuExport" Content="模型输出" Click="MenuExport_Click"/>
            <MenuItem Header="二阶面元">
                <MenuItem x:Name="menuReadT6" Header="读取T6" Click="MenuReadT6_Click"  />
                <MenuItem Header="顶点与系数" Click="MenuT6ApexCoff_Click"/>
            </MenuItem>            
        </Menu>
        <TextBox x:Name="TB_output" Grid.Column="0" Margin="0" Grid.Row="3" Grid.ColumnSpan="2" TextWrapping="Wrap"/>
        <StackPanel x:Name="ToolBox1" Grid.Row="1" HorizontalAlignment="Left" Margin="10" VerticalAlignment="Top" Orientation="Horizontal">
            <Button x:Name="Tool_ResetView" Content="重置视角" HorizontalAlignment="Left" Margin="1,1,3,0"  VerticalAlignment="Top" Click="Button_Click">
                <Button.Background>
                    <ImageBrush/>
                </Button.Background>
            </Button>
            <Button x:Name="Tool_Clear" Content="清除数据" HorizontalAlignment="Left" Margin="3,1,3,0" VerticalAlignment="Top" Click="TB_Clear_Click"/>
        </StackPanel>        
        <!--
        <Image x:Name="IMG_DC" Grid.Column="1" Margin="0,0,0,0" Grid.Row="2">
            <Image.OpacityMask>
                <ImageBrush/>
            </Image.OpacityMask>
        </Image>
        -->
    </Grid>
</Window>
